function x808058_CheckEnoughItem( sceneId, selfId, targetId )
    
    local ListSize = getn( x808058_g_LongzhuList )
    --PrintNum( ListSize )
    for i=1, ListSize do
		local ItemCount = LuaFnGetAvailableItemCount( sceneId, selfId, x808058_g_LongzhuList[ i ] )
		if ItemCount < 1 then
		    return 0
		end
	end
	
	return 1
	
end

